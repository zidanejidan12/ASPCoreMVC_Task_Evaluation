<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Article</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Article</h6>
            </div>
            <div class="card-body">
                @Html.Raw(ViewData["message"])
                <form asp-action="Edit" method="post">
                    <div class="form-group">
                        <label for="ArticleID">Article ID :</label>
                        <input type="text" class="form-control" name="ArticleID" readonly value="@Model.ArticleID" />
                    </div>
                    <div class="form-group">
                        <label for="Title">Title :</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryID">Category ID :</label>
                        <input type="text" class="form-control" name="CategoryID" value="@Model.CategoryID" />
                    </div>
                    <div class="form-group">
                        <label for="Details">Details :</label>
                        <textarea class="form-control" name="Details">@Model.Details</textarea>
                    </div>
                    <div class="form-group">
                        <label for="IsApproved">Is Approved :</label>
                        <input type="checkbox" class="form-check-input" name="IsApproved" @(Model.IsApproved ? "checked" : "") />
                    </div>
                    <!-- Add other input fields for additional properties of Article entity as needed -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-sm">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
